{
    "name": "cypresse2e",
    "version": "1.0.0",
    "description": "Cypress tests",
    "scripts": {
        "test": "npm run clean:reports && cypress run",
        "clean:reports": "rm -rf mochawesome-report/ TestReport/ cypress-tests-report.json",
        "merge:reports": "mochawesome-merge mochawesome-report/*.json > cypress-tests-report.json",
        "create:html:report": "marge --reportDir TestReport cypress-tests-report.json --inline",
        "generate:html:report": "npm run merge:reports && npm run create:html:report"
    },
    "private": true,
    "devDependencies": {
        "cypress": "^4.9.0",
        "cypress-xpath": "^1.6.0",
        "mocha": "^8.2.0",
        "mochawesome": "^6.1.1",
        "mochawesome-merge": "^4.2.0",
        "mochawesome-report-generator": "^5.1.0"
    }
}
